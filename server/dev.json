{
  "implementation": "dfsp-ussd",
  "console": {
    "port": 30019,
    "server": {
      "host": "0.0.0.0",
      "port": 30019
    }
  },
  "stdOut": {
    "mode": "dev"
  },
  "log": {
    "streams": [{
      "level": "trace",
      "stream": "../logRotateStream",
      "streamConfig": {
        "path": "ut5_%Y-%m-%d.log",
        "symlink": "ut5.log",
        "compress": true
      }
    }]
  },
  "masterBus": {
    "logLevel": "debug",
    "socket": "dfsp-ussd"
  },
  "workerBus": {
    "logLevel": "debug"
  },
  "db": {
    "logLevel": "trace",
    "db": {
      "host": "postgres"
    },
    "permission": {
      "requireSession": true
    }
  },
  "ussd": {
     "shortCodes": {
       "*123#": "menu/home"
     },
     "wrongInputState": "menu/error/wrongInput",
     "resumeState": "menu/resume",
     "timeOut": 75,
     "expireRule": "refresh",
     "defaultPhone": "",
     "defaultShortCode": "*123#"
  },
  "cache": {
    "storage": "memory",
    "encoding": "json",
    "checkFrequency": 1000,
    "defaultTTL": 3600
  },
  "debug": true
}
